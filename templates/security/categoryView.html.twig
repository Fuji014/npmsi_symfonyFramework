{{ include('includes/AdminParts/header.html.twig') }}
<div class="main-content-inner">
<!-- data table start -->
                    <div class="col-12 mt-5">
                        <div class="card">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                            </div>
                        {% endfor %}
                            <div class="card-body">
                                <h4 class="header-title pull-left">Table Category</h4>
                                <a href="{{ path('category_create') }}" class="btn btn-rounded btn-warning mb-3 pull-right"><span class="fa fa-plus-circle"></span> Add New Category</a>
                                <div class="data-tables">
                                    <table id="dataTable" class="text-center">
                                        <thead class="bg-light text-capitalize">
                                            <tr>
                                                <th>id</th>
                                                <th>Title</th>
                                                <th>Description</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for category in category %}
                                            <tr>
                                                <td><p title="{{category.Id}}" id="Dont">{{category.Id}}</p></td>
                                                <td><p title="{{category.Title}}" id="Dont">{{category.Title}}</p></td>
                                                <td><p title="{{category.Description}}" id="Dont">{{category.Description}}</p></td>
                                               
                                                <td>
                                                <a href='{{ path('category_create',{id:category.id}) }}' title='View Record'><span class='ti-eye'></span></a>
                                                <a href='{{ path('category_edit',{id:category.id}) }}' title='Update Record'><span class='ti-pencil-alt'></span></a>
                                                <a href='{{ path('category_delete',{ id:category.id }) }}' title='Delete Record'><span class='ti-trash'></span></a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>


                    

                    <!-- data table end -->
                    <!-- Primary table start -->

</div>
{{ include('includes/AdminParts/footer.html.twig') }}
