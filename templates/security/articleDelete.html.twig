{% form_theme form 'bootstrap_4_layout.html.twig' %}
{% block body %}
{{ include('includes/AdminParts/header.html.twig') }}
<div class="main-content-inner">
<!-- Falt button -->
       
                         <div class="row">
                    <!-- General button -->
                    <div class="col-lg-12 mt-5">
                            {{ formError }}
                        <div class="card">
                            <div class="card-body">
                            {{ form_start(form) }}
                                <h1 class="header-title">Delete Record</h1>
                                <p>Are you sure you want to delete this record?</p>
                                <hr>
                                <input type="hidden" value="{{ article.id }}" />
                                {{ form_widget(form.Submit,{'label':'Delete Record','attr':{
                                    'class':'btn btn-flat btn-danger mb-3'
                                }}) }}
                                <a href="{{ path('article_table') }}" class="btn btn-flat btn-secondary mb-3" disabled>Cancel</a>
                             {{ form_end(form) }}
                            </div>
                        </div>
                    </div>
                            </div>
              

</div>
{{ include('includes/AdminParts/footer.html.twig') }}
{% endblock body %}