{{ include('includes/AdminParts/header.html.twig') }}
<div class="main-content-inner">
<!-- data table start -->
                    <div class="col-12 mt-5">
                        <div class="card">
                        {% for message in app.flashes('success') %}
                            <div class="alert alert-success alert-dismissible fade show" role="alert">
                            {{ message }}
                            <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                            </button>
                            </div>
                        {% endfor %}
                        
                            <div class="card-body">

                                <h4 class="header-title pull-left">Table Article</h4>
                                <a href="{{ path('article_create') }}" class="btn btn-rounded btn-warning mb-3 pull-right"><span class="fa fa-plus-circle"></span> Add New Articles</a>
                                <div class="data-tables">
                                    <table id="dataTable" class="text-center">
                                        <thead class="bg-light text-capitalize">
                                            <tr>
                                                <th>Title</th>
                                                <th>Category</th>
                                                <th>Content</th>
                                                <th>Image</th>
                                                <th>CreatedAt</th>
                                                <th>Actions</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                        {% for articles in articles %}
                                            <tr>
                                                <td><p title="{{articles.title}}" id="Dont">{{articles.title}}</p></td>
                                                <td><p title="{{articles.title}}" id="Dont">{{articles.category.title}}</p></td>
                                                <td><p title="{{articles.content}}" id="Dont">{{articles.content}}</p></td>
                                                <td><p title="{{articles.image}}" id="Dont">{{articles.image}}</p></td>
                                                <td>{{articles.createdAt| date('Y-M-D H:I:S') }}</td>
                                                <td>
                                                <a href='{{ path('article_details',{id:articles.id}) }}' title='View Record'><span class='ti-eye'></span></a>
                                                <a href='{{ path('article_edit',{id:articles.id}) }}' title='Update Record'><span class='ti-pencil-alt'></span></a>
                                                <a href='{{ path('article_SampleDelete',{id:articles.id}) }}' title='Delete Record'><span class='ti-trash'></span></a>
                                                </td>
                                            </tr>
                                        {% endfor %}
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>


                    

                    <!-- data table end -->
                    <!-- Primary table start -->

</div>
{{ include('includes/AdminParts/footer.html.twig') }}
